<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.danbro.edu.mapper.EduTeacherDao">

    <resultMap id="BaseResultMap" type="com.danbro.edu.entity.EduTeacher">
        <!--@Table edu_teacher-->
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="intro" column="intro" jdbcType="VARCHAR"/>
        <result property="career" column="career" jdbcType="VARCHAR"/>
        <result property="level" column="level" jdbcType="OTHER"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="OTHER"/>
        <result property="isDeleted" column="is_deleted" jdbcType="OTHER"/>
        <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
        <result property="gmtModified" column="gmt_modified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, intro, career, level, avatar, sort, is_deleted, gmt_create, gmt_modified
        from guli.edu_teacher
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, intro, career, level, avatar, sort, is_deleted, gmt_create, gmt_modified
        from guli.edu_teacher
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, intro, career, level, avatar, sort, is_deleted, gmt_create, gmt_modified
        from guli.edu_teacher
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="intro != null and intro != ''">
                and intro = #{intro}
            </if>
            <if test="career != null and career != ''">
                and career = #{career}
            </if>
            <if test="level != null">
                and level = #{level}
            </if>
            <if test="avatar != null and avatar != ''">
                and avatar = #{avatar}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="isDeleted != null">
                and is_deleted = #{isDeleted}
            </if>
            <if test="gmtCreate != null">
                and gmt_create = #{gmtCreate}
            </if>
            <if test="gmtModified != null">
                and gmt_modified = #{gmtModified}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into guli.edu_teacher(name, intro, career, level, avatar, sort, is_deleted, gmt_create, gmt_modified)
        values (#{name}, #{intro}, #{career}, #{level}, #{avatar}, #{sort}, #{isDeleted}, #{gmtCreate}, #{gmtModified})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update guli.edu_teacher
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="intro != null and intro != ''">
                intro = #{intro},
            </if>
            <if test="career != null and career != ''">
                career = #{career},
            </if>
            <if test="level != null">
                level = #{level},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="isDeleted != null">
                is_deleted = #{isDeleted},
            </if>
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from guli.edu_teacher where id = #{id}
    </delete>

</mapper>